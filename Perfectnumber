#include<stdio.h>
#include<stdlib.h>

int function(int num)
{ int rem,sum=0;
  for(int i=1;i<num;i++)
  {
      rem=num%i;
      if(rem==0)
      {
        sum=sum+i;
      }
  }
  if(sum==num)
    return 1;
  else
    return 0;
}
int main()
{
  int num;
  printf("Enter the number to check");
  scanf("%d",&num);
  if(function(num)==1)
    printf("This is a perfect number");
  else
    printf("This is not a perfect number");
}
